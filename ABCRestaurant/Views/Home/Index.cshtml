@model IEnumerable<ABCRestaurant.Models.MenuItem>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name ="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Welcome to XYZ Restaurant </h2>
    <h3>Sample Menu</h3>

    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>

            </tr>
        }
    </table>
    <p>
        Please fillout a simple survey and we will email you a 20% off coupon.
        @Html.ActionLink("Simple Survey", "Survey")
    </p>
</body>
</html>
