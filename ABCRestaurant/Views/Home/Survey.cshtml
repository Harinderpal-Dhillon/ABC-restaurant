@model ABCRestaurant.Models.SurveyResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name ="viewport" content="width=device-width" />
    <title>Survey</title>
        <link href ="../Content/MyStyles.css" rel="stylesheet" />
  <style type="text/css">
     
  </style>
</head>
<body>
    <script src ="../Scripts/jquery-2.2.3.min.js">
        </script>
        <script src ="../Scripts/jquery.validate.min.js">
            </script>
            <script src ="../Scripts/jquery.validate.unobtrusive.min.js">
                </script>

                @using (Html.BeginForm())
                {

                    <fieldset>
                        <legend>SurveyResponse for XYZ Restaurant</legend>
                            @Html.ValidationSummary()

                            <p>
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name)
                            </p>

                            <p>
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email)
                            </p>

                            <p>
                                @Html.LabelFor(model => model.Phone)
                                @Html.TextBoxFor(model => model.Phone)
                            </p>

                            <p>
                                How are our menu prices?
                                Cheap @Html.RadioButtonFor(x => x.MPrices, "Cheap", false)  Reasonable  @Html.RadioButtonFor(x => x.MPrices, "Reasonable", false) Expensive @Html.RadioButtonFor(x => x.MPrices, "Expensive", false)
                            </p>

                        <div class ="editor-label">
                            Your favorite menu item on our menu list?
                            @Html.DropDownListFor(model => model.FavoriteMenuItem, new SelectList(Model.MenuItemList))
                            </div>




                            <p>
                                <input type="submit" value="Submit" />
                            </p>
</fieldset>
                    <div>
                        @ViewBag.Reply
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to Main", "Index")
                </div>
</body>
</html>

